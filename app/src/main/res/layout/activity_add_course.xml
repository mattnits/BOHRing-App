<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enrollment.AddCourseActivity">

    <TextView
        android:id="@+id/enrollment_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/AddCourseHeaderEnrollment"
        />

    <ListView
        android:id="@+id/available_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/enrollment_header2"
        android:layout_above="@id/add_course2"
        />

    <Button
        android:id="@+id/add_course2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="addClicked"
        android:text="@string/AddButtonEnrollment"
        />

</RelativeLayout>